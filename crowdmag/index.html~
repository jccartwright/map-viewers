    			        <label for="radio-mini-1">F </label>

                        <!-- y_elem -->
                        <input type="radio" name="radio-mini" id="radio-mini-2" value="2"  class="layerSelect"     data-theme="a"/>
                        <label for="radio-mini-2">H </label>

                        <!-- z_elem -->
                        <input type="radio" name="radio-mini" id="radio-mini-3" value="1" class="layerSelect"  data-theme="a" />
                        <label for="radio-mini-3">Z </label>
                    </fieldset>
		        </div>
  
